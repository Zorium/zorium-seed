@require 'normalize-styl/normalize.styl'
@require 'zorium-paper/base'

body
  zp-font-body1()

.z-root
  &.is-entering
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    overflow: hidden

    > .current
      position: fixed
      width: 100%
      height: 100%
      top: 0
      left: 0
      transition: left 0.5s

    > .next
      position: fixed
      width: 100%
      height: 100%
      top: 0
      left: 100%
      transition: left 0.5s

  &.is-entering&.is-active
    > .next
      left: 0

    > .current
      left: -100%
