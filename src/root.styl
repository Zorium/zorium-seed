@require 'normalize.styl/normalize'
@require 'zorium-paper/base'

body
  zp-font-body1()

.z-root
  &.is-entering
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    overflow: hidden

    > .previous
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 0
      transition: left 0.5s

    > .current
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 100%
      transition: left 0.5s

  &.is-entering&.is-active
    > .previous
      left: -100%

    > .current
      left: 0
