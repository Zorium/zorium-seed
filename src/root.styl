@require 'normalize.styl/normalize'
@require 'zorium-paper/base'

body
  zp-font-body1()

.z-root
  overflow: hidden
  width: 100%
  height: 100%
  position: absolute

  .main
    width: 100%
    height: 100%
    position: absolute

  .next
    width: 100%
    height: 100%
    position: absolute
    margin-left: 100%
    transition: margin-left 1s

  &.is-animating
    .next
      margin-left: 0
